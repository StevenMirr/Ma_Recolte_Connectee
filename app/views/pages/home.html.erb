<div class="container mycontainer">
  <div class="cards-categorys">
    <div class="card-banner-home1">
      <div class="text-banner-home p-3">
        Facilités de vente pour agriculteurs et maraichers
      </div>
      <div class="card-categorys-side" id="carte1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_path 'marche1.jpg' %>')" >
      </div>
    </div>

    <div class="card-banner-home2">
      <div class="card-categorys-mid" id="carte2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_path 'panierdelegumes.jpg' %>')" >
      </div>
      <div class="text-banner-home p-3">
        <h2> Bienvenue chez Ma Recolte Connectée </h2>
        <p>Un site qui unit agriculteurs et consommateurs locaux</p>
      </div>

    </div>

    <div class="card-banner-home3">
      <div class="text-banner-home p-3">
        Facilités de commande et de retrait pour le client
      </div>
      <div class="card-categorys-side" id="carte3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_path 'fairesonmarche.jpg' %>')" >
      </div>
    </div>
  </div>


  <div class="row">
    <div class="containercarte">
      <div class="col-6 p-5">
        <h1 class="my-5">Où trouver nos producteurs autour de Nantes</h1>
        <a href="/exploitations" class="button fs-4">Voir la liste des producteurs</a>
      </div>
        <div class="carte-exploitation" style="width: 50%; height: 400px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
  </div>
  <div class="row">
    <div class="containerrecettes">
      <div class="imagerecettes col-6">
      </div>
      <div class="col-6">

        <h1>Idée recette de la semaine</h1>

        <h3> Soupe de légumes </h3>
        <ul class="list">
          <li>2 Carotte(s)</li>
          <li>2 Pomme(s) de terre</li>
          <li>2 Poireau(x)</li>
          <li>3 Navet(s)</li>
          <li>4 Feuille(s) de chou</li>
        </ul>
        <ul><%= link_to "Voir la recette", "https://www.cuisineaz.com/recettes/soupes-de-legumes-au-companion-98877.aspx", target: "_blank", class:"button" %></ul>


      </div>
    </div>
  </div>
</div>
