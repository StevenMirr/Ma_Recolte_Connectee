<h1 class="text-center m-5"><%= @produit.name.capitalize %></h1>
<div class="d-flex justify-content-between m-5">
  <div>
    <h2>Recette de <%= @produit.name %></h2>
  </div>
  <div>
    <ul>
      <% @related_recipes.each do |recipe| %>
      <li class="btn button fs-3"><i class="fa-solid fa-kitchen-set"></i> <%= link_to recipe[:title], recipe[:url], target: "_blank" %> <i class="fa-solid fa-utensils"></i></li>    <% end %>
    </ul>
  </div>
  <div>
    <%= cl_image_tag @produit.photo.key, class: "card-category", crop: :fill %>
  </div>
</div>



