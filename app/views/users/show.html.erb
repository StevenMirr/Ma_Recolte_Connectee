<h1>Mon profil</h1>

<h2><%= @user.email %></h2>

<%= form_for @user do |f| %>
  <h1>Mon profil</h1>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Adresse email" %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Nom" %>
  </div>

  <div class="field">
    <%= f.label :siret %>
    <%= f.text_field :siret, placeholder: "Numéro SIRET" %>
  </div>

  <div class="field">
    <%= f.label :telephone %>
    <%= f.text_field :telephone, placeholder: "Numéro de téléphone" %>
  </div>

  <% @exploitations.each do |exploitation| %>
    <div class="exploitation">
      <%= f.fields_for :exploitations, exploitation do |exp_form| %>
        <%= exp_form.text_field :name, placeholder: "Nom de l'exploitation" %>
        <%= exp_form.text_field :address, placeholder: "Adresse de l'exploitation" %>
      <% end %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Enregistrer les modifications" %>
  </div>
<% end %>
